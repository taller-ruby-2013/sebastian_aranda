<body>
	<div id="header">
		<center><h1>Zardonix Blog</h1></center>
	</div>

	<div id="main">
		<p>
			<strong>Title:</strong>
			<%= @post.title %>
		</p>

		<p>
			<strong>Text:</strong>
			<%= @post.text %>
		</p>

		<%= link_to 'Volver', posts_path %>
		<%= link_to 'Edit', edit_post_path(@post) %>

		<h3>Agrega un comentario:</h3>
		<%= form_for([@post, @post.comments.build]) do |f| %>
		  <p>
		    <%= f.label :commenter %><br />
		    <%= f.text_field :commenter %>
		  </p>
		  <p>
		    <%= f.label :body %><br />
		    <%= f.text_area :body %>
		  </p>
		  <p>
		    <%= f.submit %>
		  </p>
		<% end %>

		<h2>Comentarios</h2>
		<%= render @comentarios %>
		<%= paginate @comentarios %>

	</div>

	<div id="footer">
		<p>Blog creado por Zardonix | Taller RubyOnRails 2013</p>
	</div>
</body>

<style>
	
	body{
		margin: auto;
		width: 40%;
		background-image:url(http://stylisticweb.com/images/blog/icon_bgpattern.gif); 
		background-repeat:repeat;
	}
	
	#header {
		margin-top: 30px;
		color: white;
		text-shadow: 2px 2px 2px black;
		background: red;
		border-radius: 10px;
		border: 5px solid black;
	}

	#main {
		margin-top: 15px;
		padding: 20px;
		background: lightblue;
		border-radius: 10px;
		border: 5px solid black;
	}

	#footer {
		color:white;
	}
</style>